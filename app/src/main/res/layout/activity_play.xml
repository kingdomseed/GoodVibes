<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayActivity">

    <ImageView
        android:id="@+id/PlayingAlbumArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:padding="32dp"
        tools:src="@drawable/album2" />

    <TextView
        android:id="@+id/SongPlayingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/PlayingAlbumArt"
        android:layout_centerHorizontal="true"
        tools:text="Coeur de Pirate: Blonde -- Adieu" />

    <LinearLayout
        android:id="@+id/ButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/MenuButtons"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_skip_previous_black_48" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_play_arrow_black_48" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_pause_black_48" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_skip_next_black_48" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MenuButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/LibraryButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingBottom="32dp"
            android:paddingTop="32dp"
            android:text="Library"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor" />

        <TextView
            android:id="@+id/NowPlayingButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:paddingBottom="32dp"
            android:paddingTop="32dp"
            android:text="Now Playing"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor" />

        <TextView
            android:id="@+id/DiscoverButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingBottom="32dp"
            android:paddingTop="32dp"
            android:text="Discover"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor" />
    </LinearLayout>

</RelativeLayout>
